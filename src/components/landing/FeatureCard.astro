};

const iconSvg = icons[icon] || icons.sparkles;
---

<article
  class="flex flex-col items-center rounded-xl border bg-card p-6 text-center shadow-sm transition-shadow hover:shadow-md"
>
  <div class="mb-4 flex size-16 items-center justify-center rounded-full bg-primary/10 text-primary">
    <Fragment set:html={iconSvg} />
  </div>
  <h3 class="mb-2 text-lg font-semibold">{title}</h3>
  <p class="text-muted-foreground">{description}</p>
</article>
